<img src="/assets/img/burger.png" alt="burger" id="center">

<div class="container">
    <div class="row">
        <div class="col-md-6" id="newbrg">
            {{#each burgers}}
                {{#unless devoured}}
                  {{> burgers/burger-block}}
                {{/unless}}
           {{/each}}
        </div>

        <div class="col-md-6" id="eatenbrg">
            {{#each burgers}}
            {{#if devoured}}
                <div>{{this.id}}. {{this.burger_name}} </div>
            {{/if}}
            {{/each}}
        </div>
    </div>

<form class="create-form" method="POST" action="/api/burgers">
    <div class="form-group">
        <label for="brg"></label>
        <input type="text" id="center" name="burger_name" >
    </div>
    <button type="submit" class="btn btn-primary" id="center">Submit</button>
    <h6 id="center">Enter a burger you want to eat. Click the "Submit" button.</h6>
</form>

</div>


